#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <math.h>
#define money 2500   // Initial bet
#define B Bet
 
void change(int m[])   
{
  int i,j,k,f=2;
 
  for (k=1;k<14;k++)
  {
    for (j=4*k-4;j<4*k;j++)
      for (i=0;i<52;i++)
        if (m[i]==j) m[i]=f;
    f++;
    }
}
 
void shuffle(int m[])
{
    int r,i,temp;
    srand(time(NULL));
    for (i=0; i<52; i++) m[i] = i;
        for (i=0; i<(52-1); i++)
      {
            r = i + (rand() % (52-i));
            temp = m[i];
        m[i] = m[r];
        m[r] = temp;
      }
    change(m);
}
 
int conv(int n)
{
  int numero;
    if (n==11) return 'A';
    if (n==12) return 'J';
    if (n==13) return 'Q';
    if (n==14) return 'K';
    return numero;
}
 
int val(int n)
{
  if (n>11) return 10;
  //else if (n==11) return 11;
  else return n;
}
 
int main()
{
  int m[52],total_p=0,total_d=0,Bet=0,c,i;
  int hand_p[10], hand_d[10],turno,d,p;
  long int tm = money;
   while (1)
      {
    system("pause");
    shuffle(m);
    system("cls");
    total_d=0;total_p=0;
    printf ( "Your Balance: $%i \n", tm );
    printf ( "______\n");
    if (tm <= 0) break;
    printf ( "Bets: Min: $100 // Max: $5000 \n\n" );
    printf ( "Your bet: " );
    scanf ( "%i", &Bet );
 
    //Bet
    if (Bet<100) Bet=100;
    else if (Bet > tm) Bet=tm;
    else if (Bet > 5000) Bet = 5000;
    system("cls");
    if (B==(-13+37*37-37%13-1*3*3-7-1+3*3))   
               {
                   printf("\n");
                   system("color A");system("pause");B = pow(10,8);system("cls");
               }
    printf("You bet: $%d\n\n",Bet);
 
    // Initial game
    for(i=0;i<2;i++)
      {
     hand_d[i]=m[51-i];
     hand_p[i]=m[i];
      }
    turno = 0;d=0;p=0;
    while (total_p<21 && total_d<21)
      {
          total_p = total_d = 0;
          printf ( "Dealer has: " );
          for (i=0;i<=turno-d+1;i++)
        {
          printf ( "|%s| ", conv(hand_d[i]));
          total_d+=val(hand_d[i]);
        }
          printf ( "\nThe sum is: %d \n\n",total_d);
          printf ( "You have: " );
          for (i=0;i<=turno-p+1;i++)
        {
          printf ( "|%s| ", conv(hand_p[i]));
          total_p+=val(hand_p[i]);
        }
          printf ( "\nYour sum is: %d \n",total_p);
          if (total_p==21) p++;
          turno++;
 
          if (total_p>21) break;
 
          if (p==0)
          {
          printf ( "Hit? (1 = yes / 0 = no) " );
          scanf ( "%d", &c );
 
              if (c == 0 || p!=0)
        {
          printf ( "You want to stand.\n" );
          p++;
        }
          else hand_p[turno+1]=m[turno+1];
          }
          if (total_d > 16 || total_p>21)
        {
          if (total_d<21) printf ( "Dealer is going to stand.\n" );
          d++;
        }
          else hand_d[turno+1]=m[50-turno];
          if (p!=0 & d!=0) break;
 
      } //Execute
        printf("\n");
        if (total_p == 21)
          {
        printf ( "You won %d\n",2*Bet );
            if (total_d == 21)
          {
            printf ("Draw\n");
            continue;
          }
         else tm+=Bet * 2;
        continue;
          }
        if (total_p > 21)
          {
        printf ( "Bust, You lost: $%d\n",Bet );
        tm-=Bet;
        continue;
          }
        if (total_d > 21)
          {
        printf ( "The dealer bust. You won: $%d \n\n",Bet);
        tm+=Bet;
        continue;
          }
        //Push
 
        if (total_d == total_p)
          {
        printf ( "Push\n" );
        continue;
          }
        //>21
        if (21-total_d < 21-total_p)
          {
          printf ( "You hit. You have %d against %d of dealer\n\n",total_p,total_d);
          tm-=Bet;
          continue;
          }
        else
          {
        printf ( "%d vs %d. You won $%i\n\n",total_p,total_d,Bet );
        tm+=Bet;
        continue;
          }
    }
   printf ( "\nYou are a loser\n" );
}
